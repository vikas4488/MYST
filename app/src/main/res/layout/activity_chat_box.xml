<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatBox"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#959292">
    <LinearLayout
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        >

    <TextView
        android:id="@+id/friendNameView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="stark"
        android:textSize="20dp"
        android:layout_gravity="left"
        android:gravity="center"
        android:layout_weight="1"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/lastSeen"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="last seen"/>
        <TextView
            android:paddingTop="5dp"
            android:id="@+id/onlineDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59 hours ago"
            android:gravity="left"
            android:layout_gravity="right"
            android:textColor="#858484"
            android:ems="5"
            />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chatPrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.98"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/chatScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/scrollLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"/>
            <LinearLayout
                android:id="@+id/imageVideoLayout"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">
                <Button
                    android:id="@+id/pickVideo"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="video"/>
                <Button
                    android:id="@+id/pickImage"
                    android:layout_marginRight="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="image"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="1"
    android:layout_weight="0.01">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_weight="0.8"
        android:layout_height="wrap_content">
    <EditText
        android:textCursorDrawable="@null"
        android:background="@drawable/chat_box"
        android:id="@+id/msgView"
        android:maxLines="4"
        android:ems="8"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:hint="Enter your message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/icon_attachment"
        android:id="@+id/imageUploadButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        />
    </RelativeLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/sendMsg"
        android:text="send"
        android:rotation="45"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/send_icon"
        android:layout_weight="0.2"/>
</LinearLayout>
</LinearLayout>